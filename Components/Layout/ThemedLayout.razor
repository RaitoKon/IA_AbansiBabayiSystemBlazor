@inherits LayoutComponentBase

@using IA_AbansiBabayiSystemBlazor.Components.Themes
@using IA_AbansiBabayiSystemBlazor.Service
@using Microsoft.JSInterop
@using IA_AbansiBabayiSystemBlazor.Data.Models
@using IA_AbansiBabayiSystemBlazor.Data
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore

@inject IJSRuntime JS
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ILogger<ThemedLayout> Logger
@inject UserManager<ApplicationUser> UserManager

@attribute [Authorize(Roles = "Admin, Troop Leader, Scout")]

<MudThemeProvider Theme="AbansiBabayiTheme.AbansiBabayiCustomTheme" />
   <MudSnackbarProvider MaxDisplayedSnackbars="3" Position="SnackbarPosition.TopCenter" />
    <MudPopoverProvider />

    <MudLayout>
        <MudDrawer Open="_drawerOpen" Elevation="3" Style="background-color:#F5F5F5;">

            <div class="drawer-title">
                <MudImage Src="images/GIRL SCOUT LOGO.png" Alt="Girl Scout Logo" FallbackSrc="images/mony.jpg" Style="height:3rem; width:auto;" />
                <div>
                    <h1>AbansiBabayi</h1>
                    <p>Iloilo Girl Scout Council</p>
                </div>
            </div>

        <AuthorizeView Roles="Admin">
        <MudNavLink Href="/ManagementPage" Icon="@Icons.Material.Filled.Dashboard">Main Dashboard</MudNavLink>


                <MudPaper Width="240px" Class="py-3" Elevation="1">
                    <MudNavMenu>
                        <MudText Typo="Typo.h6" Class="px-4" Color="Color.Primary">Admin Dashboard</MudText>
                        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">See your dashboard below</MudText>
                        <MudDivider Class="my-2" />
                        <MudNavGroup Title="Dashboard" Icon="@Icons.Material.Filled.Dashboard">
                            <MudNavGroup Title="Manage Troop Leader" Icon="@Icons.Material.Filled.PersonAdd">
                                <MudNavLink Href="/troopLeaderRegistrationRequestsPage" Icon="@Icons.Material.Filled.GroupAdd">Registration Requests</MudNavLink>
                                <MudNavLink Href="/troopLeaderDashboardPage" Icon="@Icons.Material.Filled.Groups">Troop Leader Dashboard</MudNavLink>
                                <MudNavLink Href="/troopLeaderInactiveAccountsPage" Icon="@Icons.Material.Filled.Groups">Inactive Accounts</MudNavLink>
                            </MudNavGroup>
                            <MudNavGroup Title="Manage Events" Icon="@Icons.Material.Filled.AppRegistration">
                                <MudNavLink Href="/addEventPage" Icon="@Icons.Material.Filled.EditCalendar">Add Event</MudNavLink>
                                <MudNavLink Href="/eventDashboardPage" Icon="@Icons.Material.Filled.FreeCancellation">Event Dashboard</MudNavLink>
                            </MudNavGroup>
                            <MudNavGroup Title="Manage Troop" Icon="@Icons.Material.Filled.AccountBox">
                                <MudNavLink Href="/troopDashboardPage" Icon="@Icons.Material.Filled.Groups">Troop Dashboard</MudNavLink>
                            </MudNavGroup>
                            <MudNavGroup Title="Inventory Management" Icon="@Icons.Material.Filled.Inventory2">
                                <MudNavLink Href="/manageInventoryPage" Icon="@Icons.Material.Filled.EditNote">Manage Products</MudNavLink>
                                <MudNavLink Href="/manageInventoryPurchasesPage" Icon="@Icons.Material.Filled.AddBox">Stock In</MudNavLink>
                                <MudNavLink Href="/manageInventorySalesPage" Icon="@Icons.Material.Filled.Sell">Stock Out</MudNavLink>
                            </MudNavGroup>
                            <MudNavGroup Title="Administrator Controls" Icon="@Icons.Material.Filled.AddModerator">
                                <MudNavLink Href="/changeRolesPage" Icon="@Icons.Material.Filled.EditNote">Change Roles</MudNavLink>
                            </MudNavGroup>
                        </MudNavGroup>
                    </MudNavMenu>
                </MudPaper>

           </AuthorizeView>

           <AuthorizeView Roles="Troop Leader">

                <MudPaper Width="240px" Class="py-3" Elevation="1">
                    <MudNavMenu>
                        <MudText Typo="Typo.h6" Class="px-4" Color="Color.Primary">Troop Leader Dashboard</MudText>
                        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">See your dashboard below</MudText>
                        <MudDivider Class="my-2" />
                        <MudNavGroup Title="Dashboard" Icon="@Icons.Material.Filled.Dashboard">
                            <MudNavGroup Title="Manage Scouts" Icon="@Icons.Material.Filled.PersonAdd">
                                <MudNavLink Href="/scoutRegistrationRequestsPage" Icon="@Icons.Material.Filled.GroupAdd">Registration Requests</MudNavLink>
                                <MudNavLink Href="/scoutDashboardPage" Icon="@Icons.Material.Filled.Groups">Scout Dashboard</MudNavLink>
                                <MudNavLink Href="/scoutInactiveAccountsPage" Icon="@Icons.Material.Filled.Groups">Inactive Accounts</MudNavLink>
                            </MudNavGroup>
                            <MudNavGroup Title="Event Registration" Icon="@Icons.Material.Filled.AppRegistration">
                                <MudNavLink Href="/scoutEventRegistrationRequestPage" Icon="@Icons.Material.Filled.Groups">Scout Event Registration</MudNavLink>
                            </MudNavGroup>
                            <MudNavLink Href="/troopInformationFormPage" Icon="@Icons.Material.Filled.AccountBox">Troop Information Form</MudNavLink> 
                        </MudNavGroup>
                    </MudNavMenu>
                </MudPaper>

        </AuthorizeView>

        </MudDrawer>

        <MudAppBar Fixed="false" Style="height: 3rem;" Color="Color.Primary">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Style="color:white" OnClick="@DrawerOpen"/>
            <MudSpacer />
            <MudMenu AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopRight">
                <ActivatorContent>
                    <MudAvatar>
                        <MudImage Src="images/default-scout-avatar.jpg" />
                    </MudAvatar>
                </ActivatorContent>
                <ChildContent>
                    <MudMenuItem Href="/userProfilePage" Label="Profile"/>
                    <MudDivider />
                    <MudMenuItem Label="Logout" OnClick="LogoutAsync" />
                </ChildContent>
            </MudMenu>
        </MudAppBar>

        <MudMainContent Style="background-color: #F5F5F5; padding: 0;">
            @Body
        </MudMainContent>
    </MudLayout>

@code {
    private bool _drawerOpen = true;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        // Redirect to NotFound if role doesn't match (extra safety)
        if (!user.IsInRole("Admin") && !user.IsInRole("Troop Leader"))
        {
            NavigationManager.NavigateTo("/notFoundPage", forceLoad: true);
        }
    }

    private async Task DrawerOpen()
    {
        _drawerOpen = !_drawerOpen;
    }

    private async Task LogoutAsync()
    {
        await JS.InvokeVoidAsync("eval", @"
        fetch('/auth/logout', {
            method: 'POST',
            credentials: 'include' // send auth cookie
        }).then(() => {
            window.location.href = '/landingPage';
        });
    ");
    }
}
