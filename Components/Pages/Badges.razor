@page "/Badges"
@using Microsoft.AspNetCore.Components.Web

<div class="badges-page">
    <nav class="navigation">
        <div class="nav-left">
            <img src="https://tse2.mm.bing.net/th/id/OIP.coWLSMoUkX5WITrn-36GRAHaHw?rs=1&pid=ImgDetMain&o=7&rm=3" alt="Logo" class="nav-logo" />
            <div class="nav-links">
                <a href="/">HOME</a>
                <div class="dropdown">
                    <a href="#">BADGES</a>
                    <div class="dropdown-content">
                        <NavLink href="/badges/Twinkler">Twinkler Girl Scout</NavLink>
                        <NavLink href="/badges/Star">Star Girl Scout</NavLink>
                        <NavLink href="/badges/Junior">Junior Girl Scout</NavLink>
                        <NavLink href="/badges/Senior">Senior Girl Scout</NavLink>
                        <NavLink href="/badges/Cadet">Cadet Girl Scout</NavLink>
                    </div>
                </div>
                <a href="#">TROOP LOCATOR</a>
            </div>
        </div>
        <button class="sign-in-btn">SIGN IN</button>
    </nav>

    <header class="welcome-section">
        <div class="welcome-text">
            <h1>Welcome to,<br />ILOILO GIRL SCOUT COUNCIL</h1>
            <button class="register-btn">REGISTER AS A SCOUT NOW!</button>
        </div>
        <div class="illustration">
            <img src="https://i.pinimg.com/originals/b3/4d/40/b34d4074b6fa8dba685642f9edb17817.jpg" alt="Girl Scouts around campfire" />
        </div>
    </header>

    <section class="program-boxes">
        <div class="box pink">
            <h3>Camps</h3>
            <p>Camping provides adventures that prepare Girl Scouts for life. Camps develop positive values, leadership, friendliness, and willingness to serve.</p>
        </div>
        <div class="box yellow">
            <h3>Program</h3>
            <p>The GSP Program provides space for a girl to maximize her fullest potential to become a responsible and productive member of society.</p>
        </div>
        <div class="box orange">
            <h3>Training</h3>
            <p>Adult members receive opportunities to be trained and empowered as human resource base for the Organization.</p>
        </div>
        <div class="box purple">
            <h3>Membership</h3>
            <p>Girls, young women, and adults who believe in Girl Scouting and accept the principles embodied in the Girl Scout Promise and Law are welcome to be members of GSP.</p>
        </div>
    </section>
</div>
