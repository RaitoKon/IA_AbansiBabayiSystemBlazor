@page "/Star"
@layout Layout.BlankLayout

<section class="badge-page">
    <header class="badge-header star-header">
        <img src="images/Logos/Star F.png" alt="Star Girl Scout Logo" class="badge-logo" />
        <div>
            <h1>Star Girl Scout Badges</h1>
            <p class="level-description">
                Star Girl Scouts shine bright in skills, leadership, and friendship.
            </p>
        </div>
    </header>

    <section class="promise-law">
        <h2>Star Scout Promise</h2>
        <p>I Promise to do my best to love God and my country, To help other people everyday, Especially those at home.</p>

        <h2>Star Scout Law</h2>
        <p>A Star Scout is Truthful.</p>
        <p>A Star Scout is Obedient.</p>
    </section>

    <section class="badges-grid">
        <h2>Badge Showcase</h2>
        <h3>Challenge of Preparedness</h3>
        <div class="grid">
            <div class="badge-item">
                <img src="images/star/Star_Aider.png" />
                <h3>Star Aider Badge</h3>
            </div>
            <div class="badge-item">
                <img src="images/star/Keeping_Safe.png" />
                <h3>Keeping Safe Badge</h3>
            </div>
        </div>
    </section>

    <section class="badges-grid">
