@page "/"
@page "/landingPage"

@layout Layout.BlankLayout

@using Microsoft.AspNetCore.Identity
@using IA_AbansiBabayiSystemBlazor.Data;
@using IA_AbansiBabayiSystemBlazor.Data.Models;
@using IA_AbansiBabayiSystemBlazor.Service;
@using Microsoft.EntityFrameworkCore

@inject HttpClient Http
@inject ILogger<LandingPage> Logger
@inject NavigationManager Navigation
@inject TableDataService<TroopLeader> TroopLeaderService
@inject ApplicationDbContext DbContext
@inject RegistrationStateService RegistrationStateService
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ISnackbar Snackbar
@inject IJSRuntime JS

<!DOCTYPE html>

<div class="page-wrapper">
    <div class="log-in-form @(showLoginForm ? "log-in-form-visible" : "")">
        <div class="log-in-form-card">
            <container class="column1" style="background-image: url('@backgroundImage');">
                <div class="left-card">
                    <img src="images/BG-Vector.png" alt="Girl-Scout-Vector" style="height: auto; width: 20rem;"/>
                    <p class="login-form-welcome-text">Welcome Back!</p>
                    <p class="login-form-p">Please Sign in to your account.</p>
                </div>
            </container>
            <container class="column2">

                @if (currentCard == "login-card")
                {
                    <div class="right-card">
                        <img src="images/GIRL SCOUT LOGO.png" alt="Logo" class="nav-logo" style="margin: 0; margin-bottom: 1rem;">

                        <div class="form-setup">
                            <h2 class="login-title">Login</h2>

                            <!-- Remove the form tag since we're using JavaScript -->
                            <input type="text"
                                   @bind="loginModel.Email"
                                   class="input-username"
                                   placeholder="Email"
                                   autocomplete="username" />

                            <input type="password"
                                   @bind="loginModel.Password"
                                   class="input-password"
                                   placeholder="Password"
                                   autocomplete="current-password" />

                            @if (!string.IsNullOrWhiteSpace(errorMessage))
                            {
                                <div class="error-message">@errorMessage</div>
                            }

                            <!-- Call JavaScript function on click -->
                            <button type="button"
                                    @onclick="HandleLoginAsync"
                                    class="green-button"
                                    disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <MudProgressCircular Color="Color.Primary" Size="Size.Small" Indeterminate="true" />
                                }
                                else
                                {
                                    <span>Login</span>
                                }
                            </button>

                            <button type="button"
                                    @onclick="CancelRegistration"
                                    class="dimgray-button">
                                Close
                            </button>
                        </div>

                        <p class="register-prompt">Don't have an account?</p>
                        <br />

                        <button type="button"
                                @onclick="ShowRegistrationChoices"
                                class="green-button">
                            Register here
                        </button>
                    </div>
                }

                @if (currentCard == "registrationChoices-card")
                {
                    <div class="right-card-register2">
                        <h1>ARE YOU A</h1>
                        <button class="green-button" style="height: 4rem;" @onclick="@(() => SelectedRole("Scout"))">SCOUT</button>
                        <h1>OR</h1>
                        <button class="green-button" style="height: 4rem;" @onclick="@(() => SelectedRole("Troop Leader"))">TROOP LEADER</button>

                        <button type="button" class="dimgray-button" style="margin-top: 1.5rem;" @onclick="CancelRegistration">Cancel</button>
                    </div>
                }

                @if (currentCard == "selectScoutLevel-card")
                {
                    <div class="right-card-register">
                        <button class="scout-btn twinklers" @onclick="@(() => SelectedScoutLevel(1))">TWINKLERS</button>
                        <button class="scout-btn star" @onclick="@(() => SelectedScoutLevel(2))">STAR</button>
                        <button class="scout-btn junior" @onclick="@(() => SelectedScoutLevel(3))">JUNIOR</button>
                        <button class="scout-btn senior" @onclick="@(() => SelectedScoutLevel(4))">SENIOR</button>
                        <button class="scout-btn cadet" @onclick="@(() => SelectedScoutLevel(5))">CADET</button>
                    </div>
                }

            </container>

        </div>

    </div>
    <div class="body-LoginNoEffect @(showBodyEffect ? "body-showingEffect" : "body-loginNoEffect")">
        <nav class="navigation">
            <div class="nav-bg">
                <div class="nav-left">
                    <img src="images/GIRL SCOUT LOGO.png" alt="Logo" class="nav-logo">
                    <div class="nav-links">
                        <img src="icons/Menu.svg" alt="Menu" class="menu-icon">
                                <a href="/landingPage" class="nav-link">HOME</a>
                        <div class="badgedropdown">
                            <a href="" class="nav-link">BADGES</a>
                                <div class="badgedropdown-content">
                                <a href="/Twinkler">Twinkler Girl Scout</a>
                                <a href="/Star">Star Girl Scout</a>
                                <a href="/Junior">Junior Girl Scout</a>
                                <a href="/Senior">Senior Girl Scout</a>
                                <a href="/Cadet">Cadet Girl Scout</a>
                            </div>
                        </div>
                        <a href="" class="nav-link">TROOP<br>LOCATOR</a>
                    </div>
                </div>
                <button class="sign-in-btn" @onclick="ToggleLoginForm">SIGN IN</button>
            </div>
        </nav>

        <header class="hero">

            <img src="@backgroundImage" alt="Background" class="hero-bg" style="opacity: @imageOpacity; transition: opacity 0.5s ease-in-out;">
            <section class="dropdown-section">
                <div class="dropdown-links" @onclick="ToggleDropDown">
                    REGISTER AS A SCOUT NOW!
