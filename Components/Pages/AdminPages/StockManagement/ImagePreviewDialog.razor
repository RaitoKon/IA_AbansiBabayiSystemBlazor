@using MudBlazor

<MudDialog>
    <DialogContent>
        <div class="flex flex-col items-center">
            <MudText Typo="Typo.h6" Class="mb-3">@ProductName</MudText>

            <div style="display:flex;justify-content:center;align-items:center;">
                <img src="@ImagePath"
                     alt="@ProductName"
                     style="max-width:100%; max-height:70vh; border-radius:12px; transition: transform 0.2s ease; transform:scale(@_zoom);" />
            </div>
        </div>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="() => ZoomOut()" Variant="Variant.Outlined">-</MudButton>
        <MudButton OnClick="() => ZoomIn()" Variant="Variant.Outlined">+</MudButton>
        <MudSpacer />
        <MudButton OnClick="() => MudDialog.Close()" Color="Color.Primary" Variant="Variant.Filled">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    [Parameter] public string ImagePath { get; set; }
    [Parameter] public string ProductName { get; set; }

    private double _zoom = 1.0;

    private void ZoomIn() => _zoom += 0.2;
    private void ZoomOut() { if (_zoom > 0.4) _zoom -= 0.2; }
}
