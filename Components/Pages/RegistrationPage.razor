@using IA_AbansiBabayiSystemBlazor.Service
@using Microsoft.JSInterop
@using IA_AbansiBabayiSystemBlazor.Data.Models
@using IA_AbansiBabayiSystemBlazor.Data
@using Microsoft.EntityFrameworkCore
@using IA_AbansiBabayiSystemBlazor.Components.Themes
@using Microsoft.AspNetCore.Identity

@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject ILogger<RegistrationPage> Logger
@inject RegistrationStateService RegistrationStateService
@inject ApplicationDbContext AppDbContext
@inject EmailService EmailService
@inject TableDataService<TroopLeader> TroopLeaderService
@inject TableDataService<TroopMember> TroopMemberService
@inject TableDataService<LeaderPosition> LeaderPositionService
@inject TableDataService<TroopMemberScoutLevel> ScoutLevelService
@inject TableDataService<TroopInformation> TroopInformationService
@inject UserManager<ApplicationUser> UserManagerService
@inject SignInManager<ApplicationUser> SignInManager


@page "/registrationPage"
<MudThemeProvider Theme="AbansiBabayiTheme.AbansiBabayiCustomTheme"/>
<MudPopoverProvider />

<!DOCTYPE html>


<div class="page-wrapper">
    <img src="images/BG-Base1.png" alt="Background" class="hero-bg">
    <section>
        <nav class="navigation">
            <div class="nav-bg">
                <div class="nav-left">
                    <img src="images/GIRL SCOUT LOGO.png" alt="Logo" class="nav-logo">
                    <div class="nav-links">
                        <a href="#" class="nav-link">HOME</a>
                        <a href="#" class="nav-link">BADGES</a>
                        <a href="#" class="nav-link">TROOP<br>LOCATOR</a>
                    </div>
                </div>
            </div>
        </nav>
    </section>

    <section class="registration-section">
        <div class="registration-placeholder">
            <div class="registration-placeholder-left">
                <div class="registration-content">
                        <div class="upper-registration-form">
                            <h1> Register to IGSC Website</h1>
                        <p style="margin-block: 1rem;">Do you already have an account? <a href="/landingPage"><b>Sign in</b></a></p>
                            <div class="custom-dropdown-1">
                            <MudItem>
                                <MudSelect Style="text-align:center;" T="string" @bind-Value="currentRole" Placeholder="Select Role" Variant="Variant.Text" Underline="false">
                                    <MudSelectItem Value="@("Scout")">Scout</MudSelectItem>
                                    <MudSelectItem Value="@("Troop Leader")">Troop Leader</MudSelectItem>
                                </MudSelect>
                            </MudItem>
                            </div>
                        </div>
                        <div class="lower-registration-form">
                        @if (currentRole == "Scout")
                        {
                            <MudGrid Spacing="2" Class="ma-0" Style="width:100%">
                                <MudItem xs="12" md="4">
                                    <div class="custom-dropdown-2" style="background: @GetScoutLevelColor(troopmemberinfo.TroopMemScoutLevelId);">
                                        <label>Scout Level</label>
                                        <MudSelect InputClass="pa-0" T="int?" @bind-Value="troopmemberinfo.TroopMemScoutLevelId" Variant="Variant.Text" Underline="false">
                                            @if (TroopMemberScoutLevel?.Any() == true)
                                            {
                                                @foreach (var scoutLevel in TroopMemberScoutLevel)
                                                {
                                                    <MudSelectItem Value="@((int?)scoutLevel.TroopMemScoutLevelId)">@scoutLevel.TroopMemScoutLevel</MudSelectItem>
                                                }
                                            }
                                        </MudSelect>
                                    </div>
                                </MudItem>

                                <MudItem xs="12" md="4">
                                    <div class="custom-dropdown-2">
                                        <label>Troop</label>
                                        <MudSelect InputClass="pa-0" T="int?" @bind-Value="troopmemberinfo.TroopMemTroopNo" Variant="Variant.Text" Underline="false">
                                            @if (TroopInformations?.Any() == true)
                                            {
                                                @foreach (var troop in TroopInformations)
                                                {
                                                    <MudSelectItem Value="@((int?)troop.TroopNo)">
                                                        @troop.TroopNo - @(troop.TroopLeader?.LeaderFname ?? "No Leader")
                                                    </MudSelectItem>
                                                }
                                            }
                                        </MudSelect>
                                    </div>
                                </MudItem>

                                <MudItem xs="12" md="4">
                                    <div class="custom-input-1">
                                        <label>Scout Number (Optional)</label>
                                        <MudTextField @bind-Value="troopmemberinfo.TroopMemScoutNumber" Variant="Variant.Text" InputType="InputType.Number"></MudTextField>
                                    </div>
                                </MudItem>

                                <MudItem xs="12" md="4">
                                    <div class="custom-input-1">
                                        <label>First Name</label>
                                        <MudTextField @bind-Value="troopmemberinfo.TroopMemFname" Variant="Variant.Text"></MudTextField>
                                    </div>
                                </MudItem>

                                <MudItem xs="12" md="4">
                                    <div class="custom-input-1">
                                        <label>Middle Name</label>
                                        <MudTextField @bind-Value="troopmemberinfo.TroopMemMname" Variant="Variant.Text"></MudTextField>
                                    </div>
                                </MudItem>

                                <MudItem xs="12" md="4">
                                    <div class="custom-input-1">
                                        <label>Last Name</label>
                                        <MudTextField @bind-Value="troopmemberinfo.TroopMemLname" Variant="Variant.Text"></MudTextField>
                                    </div>
                                </MudItem>

                                <MudItem xs="12" md="6">
                                    <div class="custom-input-1">
                                        <label>Birthdate</label>
                                        <MudDatePicker @bind-Date="troopmemberinfo.TroopMemBirthdate" />
                                    </div>
                                </MudItem>

                                <MudItem xs="12" md="6">
                                    <div class="custom-input-1">
                                        <label>Grade or Year</label>
                                        <MudTextField @bind-Value="troopmemberinfo.TroopMemGradeOrYear" Variant="Variant.Text"></MudTextField>
                                    </div>
                                </MudItem>

                                <MudItem xs="12" md="6">
                                    <div class="custom-dropdown-2">
                                        <label>Membership Status</label>
                                        <MudSelect T="string" @bind-Value="troopmemberinfo.TroopMemRegStatus" InputClass="pa-0" Variant="Variant.Text" Underline="false">
                                            <MudSelectItem Value="@("Existing Scout")">Existing Scout</MudSelectItem>
                                            <MudSelectItem Value="@("New Scout")">New Scout</MudSelectItem>
                                        </MudSelect>
                                    </div>
                                </MudItem>

                                <MudItem xs="12" md="6">
                                    <div class="custom-input-1">
                                        <label>Beneficiary</label>
                                        <div style="display:flex; position: relative">
                                            <MudTextField @bind-Value="troopmemberinfo.TroopMemBeneficiary" Variant="Variant.Text"></MudTextField>
                                            <div style="position:absolute; right:0;">
                                                <MudTooltip>
                                                    <TooltipContent>
                                                        <div>
                                                            A beneficiary refers to your legal guardian <br />
                                                            or an individual responsible for your care.
                                                        </div>
                                                    </TooltipContent>
                                                    <ChildContent>
                                                        <MudIconButton Icon="@Icons.Material.Outlined.Info" Color="Color.Secondary" Size="Size.Small" Class="pa-0" />
                                                    </ChildContent>
                                                </MudTooltip>
                                            </div>
                                        </div>
                                    </div>
                                </MudItem>

                                <MudItem xs="12" md="12">
                                    <div class="custom-input-1">
                                        <label>Personal Email</label>
                                        <MudTextField @bind-Value="troopmemberinfo.TroopMemEmail" Variant="Variant.Text" InputType="InputType.Email"></MudTextField>
                                    </div>
                                </MudItem>

                            </MudGrid>
                        }

                        else if (currentRole == "Troop Leader")
                        {

                            <MudGrid Spacing="2" Class="ma-0" Style="width:100%">
                                <!-- First Row: Always Position + Teaching Status -->
                                <MudItem xs="12" md="6">
                                    <div class="custom-dropdown-2">
                                        <label>Position</label>
                                        <MudSelect InputClass="pa-0" T="int?" @bind-Value="leaderinfo.LeaderPositionId" Variant="Variant.Text" Underline="false">
                                            @if (LeaderPositions?.Any() == true)
                                            {
                                                @foreach (var pos in LeaderPositions)
                                                {
                                                    <MudSelectItem Value="@((int?)pos.LeaderPositionId)">@pos.LeaderPositionName</MudSelectItem>
                                                }
                                            }
                                        </MudSelect>
                                    </div>
                                </MudItem>
                                <MudItem xs="12" md="6">
                                    <div class="custom-dropdown-2">
                                        <label>Teaching Status</label>
                                        <MudSelect T="string" @bind-Value="leaderinfo.LeaderTorNt" InputClass="pa-0" Variant="Variant.Text" Underline="false">
                                            <MudSelectItem Value="@("Teaching")">Teaching</MudSelectItem>
                                            <MudSelectItem Value="@("Non-Teaching")">Non-Teaching</MudSelectItem>
                                        </MudSelect>
                                    </div>
                                </MudItem>

                                <!-- Second Row: Conditional Troop Number + Registration Status -->
                                <MudItem xs="12" md="@(leaderinfo.LeaderRegStatus == "Existing Leader" ? 6 : 12)">
                                    <div class="custom-dropdown-2">
                                        <label>Membership Status</label>
                                        <MudSelect T="string" @bind-Value="leaderinfo.LeaderRegStatus" InputClass="pa-0" Variant="Variant.Text" Underline="false">
                                            <MudSelectItem Value="@("Existing Leader")">Existing Leader</MudSelectItem>
                                            <MudSelectItem Value="@("New Leader")">New Leader</MudSelectItem>
                                        </MudSelect>
                                    </div>
                                </MudItem>

                                @if (leaderinfo.LeaderRegStatus == "Existing Leader")
                                {
                                    <MudItem xs="12" md="6">
                                        <div class="custom-input-1">
                                            <label>Suggest Troop Number (Old Troop Number)</label>
                                            <MudTextField @bind-Value="leaderinfo.LeaderTroopNo" Variant="Variant.Text" InputType="InputType.Number"></MudTextField>
                                        </div>
                                    </MudItem>
                                }

                                <!-- Third Row: Name Fields (Always in the same position) -->
                                <MudItem xs="12" md="4">
                                    <div class="custom-input-1">
                                        <label>First Name</label>
                                        <MudTextField @bind-Value="leaderinfo.LeaderFname" Variant="Variant.Text"></MudTextField>
                                    </div>
                                </MudItem>
                                <MudItem xs="12" md="4">
                                    <div class="custom-input-1">
                                        <label>Middle Name</label>
                                        <MudTextField @bind-Value="leaderinfo.LeaderMname" Variant="Variant.Text"></MudTextField>
                                    </div>
                                </MudItem>
                                <MudItem xs="12" md="4">
                                    <div class="custom-input-1">
                                        <label>Last Name</label>
                                        <MudTextField @bind-Value="leaderinfo.LeaderLname" Variant="Variant.Text"></MudTextField>
                                    </div>
                                </MudItem>

                                <!-- Fourth Row: Birthdate + Beneficiary -->
                                <MudItem xs="12" md="6">
                                    <div class="custom-input-1">
                                        <label>Birthdate</label>
                                        <MudDatePicker @bind-Date="leaderinfo.LeaderBirthdate" />
                                    </div>
                                </MudItem>
                                <MudItem xs="12" md="6">
                                    <div class="custom-input-1">
                                        <label>Beneficiary</label>
                                        <div style="display:flex; position: relative">
                                            <MudTextField @bind-Value="leaderinfo.LeaderBeneficiary" Variant="Variant.Text"></MudTextField>
                                            <div style="position:absolute; right:0;">
                                                <MudTooltip>
                                                    <TooltipContent>
                                                        <div>
                                                            A beneficiary refers to your legal guardian <br />
                                                            or an individual responsible for your care.
                                                        </div>
                                                    </TooltipContent>
                                                    <ChildContent>
                                                        <MudIconButton Icon="@Icons.Material.Outlined.Info" Color="Color.Secondary" Size="Size.Small" Class="pa-0" />
                                                    </ChildContent>
                                                </MudTooltip>
                                            </div>
                                        </div>
                                    </div>
                                </MudItem>

                                <!-- Fifth Row: Email -->
                                <MudItem xs="12" md="12">
                                    <div class="custom-input-1">
                                        <label>Personal Email</label>
                                        <MudTextField @bind-Value="leaderinfo.LeaderEmail" Variant="Variant.Text" InputType="InputType.Email"></MudTextField>
                                    </div>
                                </MudItem>
                            </MudGrid>
                            
                        }
                        </div>

                        <div>
                            <div style=" display: flex; justify-content: space-between;">

                                <MudButton Variant="Variant.Text" Size="Size.Large" Color="Color.Primary" OnClick="CancelRegistration">Cancel</MudButton>
                                <div style="display:flex">
                                    @if (!string.IsNullOrEmpty(errorMessage))
                                    {
                                        <MudAlert Style="margin-inline:1rem; height: 2rem; align-items:center; align-self:center;" Severity="Severity.Error">@errorMessage</MudAlert>
                                    }
                                    else if (!string.IsNullOrEmpty(successMessage))
                                    {
                                        <MudAlert Style="margin-inline:1rem; height: 2rem;  align-items:center; align-self:center;" Severity="Severity.Success">@successMessage</MudAlert>
                                    }
                                <MudButton Variant="Variant.Filled" Size="Size.Large" Style="width: 11rem;" OnClick="SubmitRegistration" Color="Color.Primary" Disabled="isSubmitting">
                                
                                    @if (isSubmitting)
                                    {
                                        <MudProgressCircular Indeterminate="true"
                                                             Size="Size.Small"
                                                             Class="mr-2"
                                        Color="Color.Tertiary" />
                                    }
                                    else
                                    {
                                        <p>Submit</p>
                                                                        
                                    }
                                </MudButton>
                                </div>
                            </div>
                        </div>
                </div>

            </div>
            <div class="registration-placeholder-right">
                <img style="height: 37rem; position: absolute; right: 9rem; top: 12rem;" src="images/ScoutIllustration1.png" alt="Registration Illustration" class="registration-illustration">
            </div>
        </div>
    </section>
</div>


